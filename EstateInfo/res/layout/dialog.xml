<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#99000000" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shangbian_bj"
                android:gravity="center"
                android:text="服务时间：周一至周五09:00-21:00"
                android:textSize="13dp" >
            </TextView>

            <TextView
                android:id="@+id/consulting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/zhongbian_bj"
                android:gravity="center"
                android:text="留言咨询或提问"
                android:textColor="#f00"
                android:textSize="16dp" >
            </TextView>

            <LinearLayout
                android:id="@+id/tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/xiabian_bj"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中国服务热线："
                    android:textSize="16dp" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400-041-7515"
                    android:textColor="#f00"
                    android:textSize="16dp" >
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/backdialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/quxiao_icon" >
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#00000000" >
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bj_huise" >

    <LinearLayout
		android:id="@+id/tab1_leavemsg_title"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:gravity="center_vertical"
		android:background="@drawable/fangchan_title"
		android:orientation="vertical" >
		
		<ImageView
		    android:id="@+id/tab1_leavemsg_back"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="20dp"
		    android:background="@drawable/fanhui_icon" />
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab1_leavemsg_title"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >
		<FrameLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/msg_name">
		    <EditText 
			android:layout_width="match_parent"
		 	android:layout_height="50dp"
		 	android:id="@+id/msg_name"
		 	android:hint="请留下您的姓名......"
		 	android:layout_gravity="center_vertical"
		 	android:layout_marginLeft="60dp"
		 	android:layout_marginRight="10dp"
		 	android:gravity="left"
		 	android:textSize="15sp"
		 />
		</FrameLayout>
		
		<FrameLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/msg_email"
		    android:layout_marginTop="15dp">
		    <EditText 
				android:layout_width="match_parent"
			 	android:layout_height="wrap_content"
			 	android:id="@+id/msg_email"
			 	android:hint="请留下您的邮箱......"
			 	android:layout_gravity="center_vertical"
			 	android:layout_marginLeft="60dp"
			 	android:layout_marginRight="10dp"
			 	android:gravity="left"
			 	android:textSize="15sp"
			 />
		</FrameLayout>
		
		<FrameLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/msg_phone"
		    android:layout_marginTop="15dp">
		    <EditText 
				android:layout_width="match_parent"
			 	android:layout_height="wrap_content"
			 	android:id="@+id/msg_phone"
			 	android:hint="请留下您的移动电话......"
			 	android:layout_marginLeft="60dp"
			 	android:layout_marginRight="10dp"
			 	android:layout_gravity="center_vertical"
			 	android:gravity="left"
			 	android:textSize="15sp"
			 />
		</FrameLayout>
		
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:background="#ffffff">
		    <ImageView 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/msg_message"/>
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="2dp"
		        android:background="#ECECEC"
		        />
		    <EditText 
				android:layout_width="match_parent"
			 	android:layout_height="200dp"
			 	android:id="@+id/msg_message"
			 	android:gravity="left"
			 	android:textSize="15sp"
			 	android:layout_marginLeft="20dp"
			 	android:layout_marginRight="10dp"
	    		android:inputType="textMultiLine"
			 />
		    
		</LinearLayout>
	</LinearLayout>
	
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msg_submit"
        android:background="@drawable/queren_icon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
        
</RelativeLayout>